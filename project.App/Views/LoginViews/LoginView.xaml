<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.App.Views.LoginViews.LoginView"
             xmlns:views="clr-namespace:project.App.Views"
             xmlns:viewModels="clr-namespace:project.App.ViewModels"
             x:DataType="viewModels:LoginViewModel"
             >
   

    <Grid ColumnDefinitions="0.35*,0.3*,0.35*"
          RowDefinitions="*"
          >
        <VerticalStackLayout
            Grid.Column="1"
            Spacing="30"
            VerticalOptions="Center">
            
            <Label Text="name"
                   FontSize="25"/>
            <Entry Placeholder="example@email.com"
                   Text="{Binding model.Email}"/>

            <Label Text="{Binding model.Email}"
                   FontSize="20"/>

            <Button Text="login"
                    Command="{Binding loginCommand}"/>
            <Button Text="login as teacher"
                    Command="{Binding teacherLoginCommand}"/>

        </VerticalStackLayout>
    </Grid>

</views:ContentPageBase>
