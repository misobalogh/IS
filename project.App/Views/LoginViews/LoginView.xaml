<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.App.Views.LoginViews.LoginView"
             xmlns:viewModels="clr-namespace:project.App.ViewModels"
             >
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel/>
    </ContentPage.BindingContext>

    <Grid ColumnDefinitions="0.35*,0.3*,0.35*"
          RowDefinitions="*"
          >
        <VerticalStackLayout
            Grid.Column="1"
            Spacing="30"
            VerticalOptions="Center">
            
            <Label Text="name"
                   FontSize="25"/>
            <Entry Placeholder="example@email.com"
                   Text="{Binding model.Email}"/>

            <Label Text="{Binding model.Email}"
                   FontSize="20"/>
            
            <Button Text="login"
                    Command="{Binding loginCommand}"/>
            
        </VerticalStackLayout>
    </Grid>

</ContentPage>
